<%=form_for :message, url: messages_create_url, html:{class: 'form-horizontal'} do |f|%>
    <%= f.label :your_message, value:"test" %>:
    <%= f.text_area :content, class: "form-control", data: {textarea: "message"}%>
    <%= f.hidden_field :chatroom_id, value: 1 %>
    <%= f.hidden_field :user_id, value: current_user.id unless current_user == nil%>
    <%= f.hidden_field :username, value: current_user.username unless current_user == nil %>
    <%= f.submit "send", class: "btn btn-primary",  data: {send: "message"}%>
<% end %>